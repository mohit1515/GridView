<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginTop="25dp"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="2"
    tools:context=".MainActivity">



    <Button
        android:layout_width="179dp"
        android:layout_height="242dp"
        android:layout_row="0"
        android:background="@drawable/ff"
        android:text="HOSPITALs NEAR ME"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_column="0" />

    <Button
        android:layout_width="179dp"
        android:layout_height="242dp"
        android:layout_row="0"
        android:background="@drawable/picture2"
        android:text="PHARMACY NEAR ME"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_column="1" />

    <Button
        android:layout_width="179dp"
        android:layout_height="242dp"
        android:layout_row="1"
        android:background="@drawable/faid"
        android:text="EMERGENCY FIRST AID"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_column="0" />

    <Button
        android:layout_width="179dp"
        android:layout_height="242dp"
        android:layout_row="1"
        android:background="@drawable/appoint"
        android:text="GET  APPOINTMENT"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_column="1" />
</GridLayout>